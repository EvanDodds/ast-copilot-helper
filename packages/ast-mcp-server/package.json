{
  "name": "@ast-copilot-helper/ast-mcp-server",
  "version": "0.1.0",
  "description": "MCP protocol server that serves AST data from .astdb/ database",
  "main": "dist/index.js",
  "bin": "./bin/ast-mcp-server",
  "scripts": {
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "dev": "ts-node src/cli.ts",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --config ../../eslint.config.js",
    "lint:fix": "eslint . --config ../../eslint.config.js --fix",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "dependencies": {
    "@types/node": "^20.0.0"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "typescript": "^5.5.0",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist/",
    "bin/",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "mcp",
    "server",
    "ast",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/EvanDodds/ast-copilot-helper.git",
    "directory": "packages/ast-mcp-server"
  },
  "license": "MIT"
}
