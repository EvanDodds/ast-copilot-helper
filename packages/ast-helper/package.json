{
  "name": "@ast-copilot-helper/ast-helper",
  "version": "0.1.0",
  "description": "Core AST manipulation and utility functions for Git, filesystem, and error handling operations",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ast-helper": "./bin/ast-helper"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./git": {
      "types": "./dist/git/index.d.ts",
      "import": "./dist/git/index.js"
    },
    "./filesystem": {
      "types": "./dist/filesystem/index.d.ts",
      "import": "./dist/filesystem/index.js"
    },
    "./glob": {
      "types": "./dist/glob/index.d.ts",
      "import": "./dist/glob/index.js"
    },
    "./errors": {
      "types": "./dist/errors/index.d.ts",
      "import": "./dist/errors/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.js"
    },
    "./logging": {
      "types": "./dist/logging/index.d.ts",
      "import": "./dist/logging/index.js"
    },
    "./locking": {
      "types": "./dist/locking/index.d.ts",
      "import": "./dist/locking/index.js"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "dev": "ts-node src/cli.ts",
    "clean": "rm -rf dist temp",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --reporter=basic",
    "lint": "echo 'Linting not configured yet'",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "dependencies": {
    "@types/node": "^20.0.0",
    "commander": "^14.0.0"
  },
  "optionalDependencies": {
    "tree-sitter": "^0.21.0",
    "tree-sitter-typescript": "^0.20.3",
    "tree-sitter-javascript": "^0.20.1", 
    "tree-sitter-python": "^0.20.4",
    "web-tree-sitter": "^0.21.0"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "files": [
    "dist/",
    "bin/",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "ast",
    "cli",
    "typescript",
    "git",
    "filesystem",
    "utilities",
    "error-handling",
    "code-analysis"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/EvanDodds/ast-copilot-helper.git",
    "directory": "packages/ast-helper"
  },
  "license": "MIT"
}
