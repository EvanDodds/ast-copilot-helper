{
  "name": "@ast-copilot-helper/ast-helper",
  "version": "1.5.0",
  "description": "Core AST manipulation and utility functions for Git, filesystem, and error handling operations",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "./bin/ast-helper",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./git": {
      "types": "./dist/git/index.d.ts",
      "import": "./dist/git/index.js"
    },
    "./filesystem": {
      "types": "./dist/filesystem/index.d.ts",
      "import": "./dist/filesystem/index.js"
    },
    "./glob": {
      "types": "./dist/glob/index.d.ts",
      "import": "./dist/glob/index.js"
    },
    "./errors": {
      "types": "./dist/errors/index.d.ts",
      "import": "./dist/errors/index.js"
    },
    "./config": {
      "types": "./dist/config/index.d.ts",
      "import": "./dist/config/index.js"
    },
    "./logging": {
      "types": "./dist/logging/index.d.ts",
      "import": "./dist/logging/index.js"
    },
    "./locking": {
      "types": "./dist/locking/index.d.ts",
      "import": "./dist/locking/index.js"
    },
    "./embedder": {
      "types": "./dist/embedder/index.d.ts",
      "import": "./dist/embedder/index.js"
    },
    "./database": {
      "types": "./dist/database/index.d.ts",
      "import": "./dist/database/index.js"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "dev": "ts-node src/cli.ts",
    "clean": "rm -rf dist temp",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "node --max-old-space-size=2048 ./node_modules/.bin/vitest run --reporter=default",
    "lint": "eslint . --config ../../eslint.config.js",
    "lint:fix": "eslint . --config ../../eslint.config.js --fix",
    "typecheck": "tsc --noEmit",
    "dist:validate": "node dist/cli/distribution.js validate",
    "dist:npm": "node dist/cli/distribution.js npm",
    "dist:marketplace": "node dist/cli/distribution.js marketplace",
    "dist:github": "node dist/cli/distribution.js github",
    "dist:binary": "node dist/cli/distribution.js binary",
    "dist:auto-update": "node dist/cli/distribution.js auto-update",
    "dist:all": "node dist/cli/distribution.js all",
    "dist:verify": "node dist/cli/distribution.js verify",
    "dist:report": "node dist/cli/distribution.js report",
    "dist:verify-report": "node dist/cli/distribution.js verify-report"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "os": [
    "win32",
    "darwin",
    "linux"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "dependencies": {
    "@types/node": "^24.7.0",
    "@xenova/transformers": "^2.17.2",
    "better-sqlite3": "^12.4.1",
    "chokidar": "^4.0.3",
    "commander": "^14.0.1",
    "hnswlib-node": "^3.0.0",
    "minimatch": "^10.0.3"
  },
  "optionalDependencies": {
    "onnxruntime-node": "1.23.0",
    "tree-sitter": "^0.21.1",
    "tree-sitter-bash": "^0.21.0",
    "tree-sitter-c": "^0.20.6",
    "tree-sitter-c-sharp": "^0.20.0",
    "tree-sitter-cpp": "^0.20.0",
    "tree-sitter-dart": "^1.0.0",
    "tree-sitter-go": "^0.20.0",
    "tree-sitter-java": "^0.20.2",
    "tree-sitter-javascript": "^0.21.4",
    "tree-sitter-kotlin": "^0.3.8",
    "tree-sitter-lua": "^2.1.3",
    "tree-sitter-php": "^0.22.8",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-ruby": "^0.20.1",
    "tree-sitter-rust": "^0.20.4",
    "tree-sitter-scala": "^0.19.0",
    "tree-sitter-swift": "^0.7.1",
    "tree-sitter-typescript": "^0.21.2"
  },
  "peerDependenciesMeta": {
    "tree-sitter-bash": {
      "optional": true
    },
    "tree-sitter-c-sharp": {
      "optional": true
    },
    "tree-sitter-cpp": {
      "optional": true
    },
    "tree-sitter-dart": {
      "optional": true
    },
    "tree-sitter-go": {
      "optional": true
    },
    "tree-sitter-java": {
      "optional": true
    },
    "tree-sitter-kotlin": {
      "optional": true
    },
    "tree-sitter-lua": {
      "optional": true
    },
    "tree-sitter-php": {
      "optional": true
    },
    "tree-sitter-ruby": {
      "optional": true
    },
    "tree-sitter-rust": {
      "optional": true
    },
    "tree-sitter-scala": {
      "optional": true
    },
    "tree-sitter-swift": {
      "optional": true
    },
    "tree-sitter-typescript": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/minimatch": "^6.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist/",
    "bin/",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "ast",
    "cli",
    "typescript",
    "git",
    "filesystem",
    "utilities",
    "error-handling",
    "code-analysis"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/EvanDodds/ast-copilot-helper.git",
    "directory": "packages/ast-helper"
  },
  "license": "MIT"
}
