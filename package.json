{
  "name": "ast-copilot-helper",
  "version": "0.1.0",
  "description": "Monorepo for AST-based code analysis tools and MCP server",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:all": "npm run build",
    "build:watch": "npm run build:watch --workspaces --if-present",
    "test": "vitest run",
    "test:all": "npm run test && npm run test:integration && npm run test:benchmarks",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:benchmarks": "vitest run tests/benchmarks",
    "test:benchmark": "vitest run tests/benchmarks",
    "test:watch": "vitest",
    "test:ci": "vitest run --coverage --reporter=verbose --reporter=json --outputFile=test-results.json",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "vitest run tests/integration",
    "dev": "npm run dev --workspaces --if-present",
    "start:mcp": "npm run start --workspace=packages/ast-mcp-server",
    "start:cli": "npm run start --workspace=packages/ast-helper",
    "clean": "npm run clean --workspaces --if-present && rm -rf coverage test-output test-tmp *.log",
    "clean:all": "npm run clean && rm -rf node_modules packages/*/node_modules",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "type-check": "tsc --build --verbose",
    "typecheck": "npm run type-check",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "install:all": "npm install",
    "postinstall": "npm run build",
    "prepack": "npm run build && npm run test:ci",
    "prepare": "npm run build",
    "release:dry": "echo 'Dry run - would publish to npm'",
    "release": "npm run prepack && npm publish --access=public"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0",
    "tmp": "^0.2.3",
    "@types/tmp": "^0.2.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EvanDodds/ast-copilot-helper.git"
  },
  "keywords": [
    "ast",
    "typescript",
    "mcp",
    "cli",
    "vscode-extension",
    "monorepo"
  ],
  "author": "EvanDodds",
  "license": "MIT",
  "os": [
    "win32",
    "darwin",
    "linux"
  ],
  "cpu": [
    "x64",
    "arm64"
  ]
}
