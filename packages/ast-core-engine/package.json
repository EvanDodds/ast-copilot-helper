{
  "name": "@ast-helper/core-engine",
  "version": "0.1.0",
  "description": "High-performance Rust core engine for AST processing",
  "main": "./pkg/ast_core_engine.js",
  "types": "./pkg/ast_core_engine.d.ts",
  "exports": {
    ".": {
      "types": "./pkg/ast_core_engine.d.ts",
      "import": "./pkg/ast_core_engine.js",
      "default": "./pkg/ast_core_engine.js"
    },
    "./package.json": "./package.json"
  },
  "license": "MIT",
  "engines": {
    "node": ">= 10"
  },
  "scripts": {
    "build": "wasm-pack build --target nodejs --out-dir pkg --features wasm",
    "build:all": "npm run build",
    "build:release": "wasm-pack build --target nodejs --out-dir pkg --features wasm --release",
    "build:debug": "wasm-pack build --target nodejs --out-dir pkg --features wasm --dev",
    "build:wasm": "wasm-pack build --target nodejs --out-dir pkg --features wasm",
    "build:wasm:release": "wasm-pack build --target nodejs --out-dir pkg --features wasm --release",
    "test:wasm": "npm run build:wasm && cargo test --features wasm",
    "clean:wasm": "rm -rf pkg/",
    "clean:all": "npm run clean && npm run clean:wasm",
    "test": "cargo test",
    "clean": "cargo clean && rm -rf pkg/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EvanDodds/ast-copilot-helper.git",
    "directory": "packages/ast-core-engine"
  },
  "keywords": [
    "ast",
    "rust",
    "performance",
    "wasm",
    "tree-sitter",
    "vector-database"
  ],
  "files": [
    "pkg/"
  ]
}
