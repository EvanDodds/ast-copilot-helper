echo "ğŸ” Running pre-commit validation (scoped to staged files)..."
echo "â±ï¸  This should take ~15-30 seconds (faster with staged-only linting)"

# Scoped linting and formatting for staged files only
echo "ğŸ§¹ Linting staged files..."
npx lint-staged || exit 1

# Type checking (full project - faster than previous full lint)
echo "ğŸ“ Type checking..."
yarn run type-check || exit 1

# Essential unit tests only (fastest subset)
echo "ğŸ§ª Running essential unit tests..."
yarn run test:precommit || exit 1

# Check for Rust files changes and run Rust validation if needed
if git diff --cached --name-only | grep -E '\.(rs|toml)$' > /dev/null 2>&1; then
  echo "ğŸ¦€ Rust files detected, running Rust validation..."
  if command -v cargo > /dev/null 2>&1; then
    cd packages/ast-core-engine
    echo "  â†’ Checking Rust code compilation..."
    cargo check --quiet || exit 1
    echo "  â†’ Running Rust linting..."
    cargo clippy --quiet -- --deny warnings || exit 1
    echo "  â†’ Checking Rust formatting..."
    cargo fmt -- --check || exit 1
    echo "  ğŸ’¡ Note: NAPI tests require Node.js runtime, use 'yarn test:rust:all' for full validation"
    cd ../..
  else
    echo "  âš ï¸  Cargo not found, skipping Rust validation"
    echo "  ğŸ’¡ Install Rust: https://rustup.rs/"
  fi
else
  echo "ğŸ¦€ No Rust files changed, skipping Rust validation"
fi

echo "âœ… Pre-commit validation completed!"
echo "ğŸ‘‰ Pre-push will run more comprehensive tests"
